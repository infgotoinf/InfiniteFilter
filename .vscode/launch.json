        {
            "name": "Debug Build",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/DEBUG_Infinite_Filter.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe", // Update this path if needed
